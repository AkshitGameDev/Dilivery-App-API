generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id             String    @id @default(cuid())
  platform       String
  externalId     String
  status         String    @default("CREATED")
  currency       String?
  subtotal       Decimal?  @db.Decimal(12, 2)
  shipping       Decimal?  @db.Decimal(12, 2)
  tax            Decimal?  @db.Decimal(12, 2)
  grand          Decimal?  @db.Decimal(12, 2)
  customerName   String?
  customerEmail  String?
  customerPhone  String?
  placedAt       DateTime?
  rawPayloadHash String?
  createdAt      DateTime  @default(now())
  items          Json?
  shippingAddr   Json?
  jobs           Job[]

  @@unique([platform, externalId])
}

model Driver {
  id               String    @id @default(cuid())
  name             String
  status           String    @default("available")
  lat              Float?
  lng              Float?
  lastHeartbeat    DateTime?
  rating           Float?    @default(5)
  lastAssignmentAt DateTime?
  createdAt        DateTime  @default(now())
  jobs             Job[]     @relation("DriverJobs")
}

model Job {
  id               String   @id @default(cuid())
  orderId          String
  pickupLat        Float?
  pickupLng        Float?
  dropLat          Float?
  dropLng          Float?
  status           String   @default("OPEN")
  assignedDriverId String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  order          Order   @relation(fields: [orderId], references: [id])
  assignedDriver Driver? @relation("DriverJobs", fields: [assignedDriverId], references: [id])

  @@index([status])
  @@index([assignedDriverId])
}
